{
  "name": "library-rollup-starter",
  "version": "0.1.0",
  "description": "",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf dist/**/*",
    "build": "rollup -c",
    "postbuild": "copyfiles ./dist/* ./library-rollup-starter/",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "start-storybook -p 9001 -c storybook",
    "storybook:build": "build-storybook -c storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:staged": "jest --findRelatedTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:fix",
      "npm run test:staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bjarkirafn/library-rollup-starter.git"
  },
  "keywords": [],
  "author": "bjarkirafn <bjarkirafn@gmail.com> (https://github.com/bjarkirafn)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bjarkirafn/library-rollup-starter/issues"
  },
  "homepage": "https://github.com/bjarkirafn/library-rollup-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@storybook/addon-options": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "babel-loader": "^8.1.0",
    "copyfiles": "^2.2.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.5",
    "prettier": "^2.0.4",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=16.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css": "<rootDir>/mocks/styles.js"
    }
  }
}
